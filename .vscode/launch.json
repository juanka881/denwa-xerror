	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "debug: tests",
			"skipFiles": [
				"<node_internals>/**",
				"${workspaceFolder}/node_modules/**"
			],
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"--reporter",
				"dot",
				"--slow",
				"28800000",
				"--timeout",
				"28800000",
				"--colors"
			],
			"sourceMaps": true
		}
	]
}